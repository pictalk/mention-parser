  "description": "",
  "main": "lib/mention-parser.js",
  "module": "esm/mention-parser.js",
  "types": "lib/mention-parser.d.ts",
  "scripts": {
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:cjs": "tsc -p tsconfig.json",
